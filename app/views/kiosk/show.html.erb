<div id="div-header">
  <div id="div-time-weather-date">
    <div id="div-time">
    </div>
    <div id="div-weather">
      13 Celsius ⛅️
    </div>
    <div id="div-date">
    </div>
    <%= image_tag("ucl_engineering_logo.png", id: "ucl-engineering-logo") %>
  </div>

  <%= image_tag("ucl_logo.png", id: "ucl-logo") %>

</div>

<div id="div-tab">
  <%= image_tag("news.png", id: "news") %>
  News
</div>

<div id="div-center">
  <div class="content-canvas">
    <% post = Post.first %>
    <div class="row">
      <div class="col-sm-6">
        <%= post.content %>
      </div>
      <div class="col-sm-6">
        <%= post.title %>
      </div>
    </div>
    <div class="row">
      <!-- TODO fix offset -->
      <div class="offset-sm-3 col-sm-6 offset-sm-3">
        <%= post.date.strftime("%b %e %Y, %l:%M %p") %>
      </div>
    </div>
  </div>
</div>

<div id="div-footer">
  <div id="div-tfl-widget" class="footer-widget">PROBLEMS ON VICTORIA LINE</div>
  <div class="vertical-divider"></div>
  <div id="div-news-feed" class="footer-widget">NOTHING NEW HAPPENED</div>
</div>
